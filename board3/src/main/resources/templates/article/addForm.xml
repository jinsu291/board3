<form action="article.html" th:action method="post">
    <div>
        <label for="subject">제목</label>
        <input type="text" id="subject" name="subject" class="formcontrol" placeholder="제목을 입력해주세요">
    </div>
    <div>
        <label for="content">본문</label>
        <input type="text" id="content" name="content" class="form-control"
               placeholder="본문을 입력해주세요">
    </div>

    <hr class="my-4">
    <div class="row">
        <div class="col">
            <button class="w-100 btn btn-primary btn-lg" type="submit">게시글 등록</button>
        </div>
        <div class="col">
            <button class="w-100 btn btn-secondary btn-lg"
                    onclick="location.href='articles.html'"
                    th:onclick="|location.href='@{/articles}'|"
                    type="button">취소</button>
        </div>
    </div>
</form>